@{
    ViewData["Title"] = "Home Page";
}


<div class="container">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <div class="text-center">
                <h1 class="display-4">ILNZU</h1>
            </div>

            <div class="d-flex justify-content-center">
                <h2>Chat list</h2>
            </div>

            @foreach (var tuple in ViewBag.MeetingRooms)
            {
                <p>
                    <a href=@("https://localhost:44391/meeting/room/" + tuple.Item1.ToString())>@tuple.Item2</a>
                </p>
            }
            @* To do: Select user's chat rooms *@
            <div class="col d-flex justify-content-center">
                <p>User's chat room in progress</p>
            </div>
        </div>
    </div>
</div>