@model ILNZU.ViewModels.LoginModel

<h2>Login</h2>
<p>To use this website you have to authorize.</p>
<p>
    Don't have an account?
    <a asp-action="Register" asp-controller="Account">Registration</a>
</p>

<div class="col-md-4">
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Enter Email</label>
                <input type="text" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Enter password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-outline-dark" />
            </div>
        </div>
    </form>
</div>